<h1>最近の口癖</h1>

<p><% notice %></p>

<table>
  <tr>
    <th>内容</th>
    <th>詳細</th>
    <th>編集</th>
    <th>削除</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>

　　<td><%= link_to '詳細', post_path(post.id) %></td>
　　<td><%= link_to "編集する", edit_post_path(post.id) %></td>
  　<td><%= link_to '削除する', post_path(post.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>

<%= link_to '投稿する', new_post_path %>
